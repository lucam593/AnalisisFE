@model FactuCR.Models.Provider

@{
    ViewData["Title"] = "Edit";
    ViewData["PanelTitle"] = "Modificar un proveedor";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<form asp-action="Edit" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdProvider" />
    <div class="form-group">
        <label asp-for="IdType" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <select asp-for="IdType" class="form-control" asp-items="ViewBag.IdType"></select>
            <span asp-validation-for="IdType" class="text-danger"></span>
        </div>
    </div><div class="form-group">
        <label asp-for="IdentificationNumber" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="IdentificationNumber" class="form-control" data-inputmask="'mask': '9-999-999999'" />
            <span asp-validation-for="IdentificationNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <input type="submit" value="Guardar cambios" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
    </div>
</form>
