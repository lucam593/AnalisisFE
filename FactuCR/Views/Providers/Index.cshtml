@model IEnumerable<FactuCR.Models.Provider>

@{
    ViewData["Title"] = "FCR - Lista de Proveedores";
    ViewData["PanelTitle"] = "Lista de Proveedores";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<table id="datatable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdentificationNumber)
            </th>
            <th>
                Tipo de Identificaci&oacute;n
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Descripci&oacute;n
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdentificationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTypeNavigation.Name, "", "Pruebas")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdProvider" class="label label-success">Editar</a>
                <a asp-action="Details" asp-route-id="@item.IdProvider" class="label label-default">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.IdProvider" class="label label-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="ln_solid"></div>
<a asp-action="Create" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Agregar Proveedor</a>