@model FactuCR.Models.Category

@{
    ViewData["Title"] = "FCR - Nueva Categoría";
    ViewData["PanelTitle"] = "Nueva Categoría";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<form asp-action="Create" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">Nombre de la categor&iacute;a *</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label col-md-3 col-sm-3 col-xs-12">Descripci&oacute;n de la categor&iacute;a</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
            <button type="submit" value="Guardar categoria" class="btn btn-success"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar Categor&iacute;a</button>
            <a asp-action="Index" class="btn btn-default"><i class="fa fa-caret-square-o-left" aria-hidden="true"></i> Cancelar</a>
        </div>
    </div>
</form>
