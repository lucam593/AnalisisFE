@model FactuCR.Models.Terminal

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Crear nueva Terminal</h2>

<form asp-action="Create" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">

        <div class="form-group">
            <label asp-for="IdOffice" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="control-label col-md-3 col-sm-3 col-xs-12">
                <select asp-for="IdOffice" class="form-control" asp-items="ViewBag.IdOffice"></select>
            </div>
        </div>
        <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">Nombre Terminal</label>
        <div class="control-label col-md-3 col-sm-3 col-xs-12">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group">
        <label asp-for="TerminalNumber" class="control-label col-md-3 col-sm-3 col-xs-12"> Numero Terminal</label>
        <div class="control-label col-md-3 col-sm-3 col-xs-12">
            <input asp-for="TerminalNumber" class="form-control" data-inputmask="'mask':'99999'" />
            <span asp-validation-for="TerminalNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Crear Nueva Terminal" class="btn btn-default" />
    </div>
</form>

<div>
    <a asp-action="Index">Regresar Lista</a>
</div>

