@model FactuCR.Models.Terminal

@{
    ViewData["Title"] = "FCR - Nueva Terminal";
    ViewData["PanelTitle"] = "Nueva Terminal";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<form asp-action="Create" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="IdOffice" class="control-label col-md-3 col-sm-3 col-xs-12">Sucursal</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <select asp-for="IdOffice" class="form-control" asp-items="ViewBag.IdOffice"></select>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">Nombre de la Terminal</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="TerminalNumber" class="control-label col-md-3 col-sm-3 col-xs-12"> N&uacute;mero de la Terminal</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="TerminalNumber" class="form-control" data-inputmask="'mask':'99999'" />
            <span asp-validation-for="TerminalNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3">
            <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Guardar Terminal</button>
            <a asp-action="Index" class="btn btn-default"><i class="fa fa-caret-square-o-left"></i> Cancelar</a>
        </div>
    </div>
</form>
