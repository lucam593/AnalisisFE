@model FactuCR.Models.Discount

@{
    ViewData["Title"] = "Create";
    ViewData["PanelTitle"] = "Nuevo Descuento";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<form asp-action="Create" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">Nombre *</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Percentage" class="control-label col-md-3 col-sm-3 col-xs-12">Porcentaje *</label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <input asp-for="Percentage" class="form-control" />
            <span asp-validation-for="Percentage" class="text-danger"></span>
        </div>
    </div>
    <div class="ln_solid"></div>
    <div class="form-group">
        <div class="col-md-6 col-xs-12 col-sm-6 col-md-offset-3 col-sm-offset-3">
            <button type="submit" class="btn btn-success"><i class="fa fa-floppy-o"></i> Guardar Descuento</button>
            <a asp-action="Index" class="btn btn-default"><i class="fa fa-caret-square-o-left"></i> Cancelar</a>
        </div>
    </div>
</form>
