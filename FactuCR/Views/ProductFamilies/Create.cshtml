@model FactuCR.Models.ProductFamily

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <!-- Init Panel Title -->
            <div class="x_title">
                <h2>Ingreso de nueva familia de productos. <small>Complete todos los campos requeridos</small></h2>
                <!-- Top Right Tools Menu -->
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <!-- Finish Top Right Tools Menu -->
                <div class="clearfix"></div>
            </div>
            <!-- Finish Panel Title -->
            <!-- Init Panel Content -->
            <div class="x_content">
                <form id="newFamilyForm" asp-action="Create" class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group hidden">
                        <label asp-for="IdUser" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="IdUser" class="form-control" asp-items="ViewBag.IdUser" value="1234"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="FamilyType" class="control-label col-md-3 col-sm-3 col-xs-12"> Tipo de Familia</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="FamilyType" class="form-control" />
                            <span asp-validation-for="FamilyType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="control-label col-md-3 col-sm-3 col-xs-12">Descripción</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-default" />
                    </div>
                </form>
                <div class="ln_solid"></div>
                <a asp-action="Index" class="btn btn-primary">Lista de Familia de productos</a>
            </div>
            <!-- Finish Panel Content -->
        </div>
    </div>
</div>
